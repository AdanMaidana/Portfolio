<style>
  @property --gradient-angle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }
  :root {
    --clr-1: #52d152;
    --clr-2: #00bfff;
    --clr-3: #3e82ff;
  }
  .project {
    max-width: 1024px;
    position: relative;
    border-radius: 0.5rem;
    margin: 0 auto;
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 15% cover 30%;
  }

  @keyframes reveal {
    0% { 
      opacity: 0;
      scale: 0.5;
    }
    100% {
      opacity: 1;
      scale: 1;
    }
  }

  .project::before,
  .project::after {
    content: "";
    position: absolute;
    inset: -0.1rem;
    z-index: -1;
    border-radius: inherit;
    background: conic-gradient(
      from var(--gradient-angle),
      var(--clr-1),
      var(--clr-2),
      var(--clr-3),
      var(--clr-3),
      var(--clr-2),
      var(--clr-1)
    );
    animation: rotation 10s linear infinite;
    animation-play-state: paused;
  }

  .project::after {
    filter: blur(0.3rem);
    transition: filter 0.3s;
  }

  .project-content {
    background: #141414;
    position: relative;
    z-index: 2;
    padding: 1rem;
    display: flex;
    border-radius: inherit;

    img {
      transition: 0.6s ease;
    }
  }

  .project-content:hover img {
    transform: scale(1.2);
  }

  .project:hover::after {
    filter: blur(0.6rem);
  }

  

  .project:hover::after,
  .project:hover::before {
    animation-play-state: running;
  }

  .project-link svg {
    height: 24px;
    width: 24px;
  }

  @keyframes rotation {
    0% {
      --gradient-angle: 0deg;
    }
    100% {
      --gradient-angle: 360deg;
    }
  }
</style>
