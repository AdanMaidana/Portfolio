---
import { Image } from "astro:assets";

const icons = await Astro.glob("../assets/svg/*.svg");

const { projectTitle,description, skills, projectImg, web, repository } = Astro.props;
---

<div class="bg-gray-500 rounded shadow-lg max-w-screen-md project">
  <div class="project-content">
    <h3 class="text-yellow-400 text-3xl pb-3 font-semibold">
      {projectTitle}
    </h3>
    {
      description?.map((text) => {
        return <p class="mb-3 text-white">{text}</p>;
      })
    }
    
    <Image
      src={projectImg}
      class="rounded"
      alt={`${projectTitle} preview`}
      width={1920}
      height={1080}
    />
    <div class="flex flex-col md:flex-row gap-2 pt-4">
      <a
        href={web}
        target="_blank"
        rel="noopener noreferrer"
        class="w-full rounded text-center text-gray-200 bg-gray-600 py-2 hover:bg-gray-700 transition-all hover:text-white"
        >Sitio Web</a
      ><a
        href={repository}
        target="_blank"
        rel="noopener noreferrer"
        class="w-full rounded text-center text-gray-200 bg-gray-600 py-2 hover:bg-gray-700 transition-all hover:text-white"
        >Repositorio</a
      >
    </div>
  </div>
</div>

<style>
  .project {
    max-width: 768px;
    position: relative;
    overflow: hidden;
    transition: transform 0.6s ease;
    border-radius: 5px;
    background: rgb(75, 75, 75);
    padding: .4rem;
  }

  .project::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      transparent 5%,
      rgb(255, 215, 137) 50%,
      transparent 99%
    );
    opacity: 1;
    transition: opacity 0.6s ease;
    z-index: 1;
  }

  .project-content {
    position: relative;
    z-index: 2;
    background: rgb(25, 25, 25);
    padding: 1rem;
  }
</style>
