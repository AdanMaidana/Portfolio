<style>
  #profilePicture {
    animation-name: fadeInDown;
    animation-duration: 1.5s;
    animation-fill-mode: both;
  }

  h1 {
    color: transparent;
    -webkit-text-stroke: 1px #fff;
    background: linear-gradient(to right, rgb(0, 185, 130) 33%, #0077ff);
    background-clip: text;
    -webkit-background-clip: text;
    animation-name: fadeInLeft;
    animation-duration: 1.5s;
    animation-fill-mode: both;
    overflow: hidden;
  }

  p {
    color: transparent;
    background: linear-gradient(to left, rgb(0, 185, 130) 33%, #0077ff);
    background-clip: text;
    -webkit-background-clip: text;
    animation-name: fadeInRight;
    animation-duration: 1.5s;
    animation-fill-mode: both;
  }

  a {
    transition:
      transform 0.3s ease,
      background-color 0.3s,
      border-color 0.3s;

    svg {
      width: 20px;
      height: 20px;
    }
  }

  a:hover {
    transform: scale(1.2);
  }

  ul li {
    animation-name: fadeInUp;
    animation-duration: 1.5s;
    animation-fill-mode: both;
  }

  .arrows {
    width: 30px;
    height: 36px;
    position: absolute;
    left: 50%;
    margin-left: -15px;
    bottom: 15px;
  }

  .arrows path {
    stroke: #ffffff;
    fill: transparent;
    stroke-width: 1px;
    animation: arrow 3s infinite;
    -webkit-animation: arrow 3s infinite;
  }

  @keyframes arrow {
    0% {
      opacity: 0;
    }
    40% {
      opacity: 1;
    }
    80% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  @-webkit-keyframes arrow {
    0% {
      opacity: 0;
    }
    40% {
      opacity: 1;
    }
    80% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  .arrows path.a1 {
    animation-delay: -1s;
    -webkit-animation-delay: -1s;
  }

  .arrows path.a2 {
    animation-delay: -0.5s;
    -webkit-animation-delay: -0.5s;
  }

  .arrows path.a3 {
    animation-delay: 0s;
    -webkit-animation-delay: 0s;
  }

.home-svg {
  transition: fill 150ms;
}
  

  @media (width >= 640px) {
    a svg {
      width: 24px;
      height: 24px;
    }
  }

  @media (width >= 768px) {
    a svg {
      width: 28px;
      height: 28px;
    }
  }
</style>
