---
import { Image } from "astro:assets";
import { projectsData } from "../data/projects";
---

<section
  id="projects"
  class="text-white max-w-screen-lg mx-auto scroll-mt-12 px-4 py-20"
>
  <header class="mb-10" >
    <h2
      class="text-4xl font-bold text-center text-yellow-400 flex justify-center items-end gap-x-3 italic"
    >
      Proyectos
      <svg
        width="36px"
        height="36px"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        fill="#facc15"
        stroke="#facc15"
        stroke-width="0.00024000000000000003"
        ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
          id="SVGRepo_tracerCarrier"
          stroke-linecap="round"
          stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
          ><path
            d="M17 5V3H7v2H1v16h22V5zM8 4h8v1H8zm14 16H2V10h20zm0-11H2V6h20z"
          ></path><path fill="none" d="M0 0h24v24H0z"></path></g
        ></svg
      >
    </h2>
  </header>

  <main class="flex flex-col md:flex-row md:flex-wrap md:justify-between gap-4">

    {projectsData.map((project) => {
      return (
        <a href={`/${project.title}`} class="w-full mx-auto">
          <Image src={project.img} alt={`${project.title} preview`}  />
        </a>
      )
    })}
   
  </main>
</section>

<style>
 main a {
  max-width: 768px;
  position: relative;
  overflow: hidden;
  transition: transform .6s ease;
  border-radius: 5px;
  background: rgb(75, 75, 75);
}

main a::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    45deg,
    transparent 5%,
    rgb(254, 201, 94) 50%,
    transparent 99%
  );
  opacity: 0;
  transition: opacity .6s ease;
  z-index: 1;
}


main a img {
  padding: .2rem;
  border-radius: 5px;
  transition: border-color .3s ease;
  z-index: 2;
  position: relative;
}

main a:hover {
  transform: scale(.95);
}

main a:hover::before {
  opacity: 1;
}


@media (min-width: 768px) {
  main a {
    width: calc(50% - 8px);
  }
}
</style>
